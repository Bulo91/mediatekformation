{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3">
    <h2 class="text-info">Gestion des playlists</h2>

    <a href="{{ path('admin.playlists.add') }}" class="btn btn-success mb-3">âž• Ajouter une playlist</a>

    <table class="table table-striped">
        <caption>Liste des playlists</caption>
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th scope="col">Nb formations</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for playlist in playlists %}
                <tr>
                    <td>{{ playlist.name }}</td>
                    <td>{{ playlist.description }}</td>
                    <td>{{ playlist.formations|length }}</td>
                    <td>
                        <a href="{{ path('admin.playlists.edit', {id: playlist.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('admin.playlists.delete', {id: playlist.id}) }}"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Confirmer la suppression ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
