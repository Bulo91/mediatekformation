{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-info">{{ isEdit ? 'Modifier' : 'Ajouter' }} une playlist</h2>

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>

    {% if isEdit and playlistformations is defined %}
        <div class="mb-3">
            <strong>Formations associées :</strong><br>
            {% for formation in playlistformations %}
                - {{ formation.title }}<br>
            {% else %}
                Aucune formation liée.
            {% endfor %}
        </div>
    {% endif %}

    <button type="submit" class="btn btn-success">
        {{ isEdit ? 'Enregistrer' : 'Ajouter' }}
    </button>
    <a href="{{ path('admin.playlists') }}" class="btn btn-secondary">Retour</a>

    {{ form_end(form) }}
</div>
{% endblock %}
